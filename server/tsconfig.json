{
  "compilerOptions": {
    "target": "ES2020", // Support modern JavaScript features
    "module": "CommonJS", // For Node.js
    "rootDir": "src", // TS source folder
    "outDir": "dist", // Compiled JS will go here
    "strict": true, // Enforce all type rules
    "esModuleInterop": true, // Support import express from 'express'
    "forceConsistentCasingInFileNames": true, // Enforce consistent file naming
    "skipLibCheck": true, // Skip type checking of declaration files
    "moduleResolution": "node", // Use Node.js module resolution
    "resolveJsonModule": true // Allow importing JSON files
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
